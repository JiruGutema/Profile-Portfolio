generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  author      String // name of the author
  publishedAt DateTime @default(now())
  readTime    String
  tags        String // comma separated
  likes       Int      @default(0)
  dislikes    Int      @default(0)
  coverImage  String?
}
